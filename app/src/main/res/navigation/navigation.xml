<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/diaryEntriesListFragment">

    <fragment
        android:id="@+id/diaryEntriesListFragment"
        android:name="com.segun.mydiary.DiaryEntriesListFragment"
        android:label="fragment_diary_entries_list"
        tools:layout="@layout/fragment_diary_entries_list" >
        <action
            android:id="@+id/action_diaryEntriesListFragment_to_entryDisplayFragment"
            app:destination="@id/entryDisplayFragment" />
    </fragment>
    <fragment
        android:id="@+id/entryDisplayFragment"
        android:name="com.segun.mydiary.EntryDisplayFragment"
        android:label="fragment_entry_display"
        tools:layout="@layout/fragment_entry_display" />
    <activity
        android:id="@+id/mainActivity"
        android:name="com.segun.mydiary.MainActivity"
        android:label="activity_main"
        tools:layout="@layout/activity_main" />
</navigation>